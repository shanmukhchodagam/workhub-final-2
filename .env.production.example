# WorkHub Production Environment Configuration
# Copy this file to .env.production and fill in your production values

# Database Configuration (Neon PostgreSQL)
DATABASE_URL=postgresql://username:password@your-neon-host/workhub?sslmode=require

# Redis Configuration (Upstash FREE tier)
# Sign up at https://console.upstash.com/ (no credit card required)
# Create database and copy the connection string
REDIS_URL=redis://default:your-password@region.upstash.io:port

# Application Security
SECRET_KEY=your-super-secure-production-secret-key-min-32-chars

# Email Service Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USERNAME=workhub@yourcompany.com
EMAIL_PASSWORD=your-app-specific-password
FROM_EMAIL=workhub@yourcompany.com
FROM_NAME=WorkHub Platform

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret
GOOGLE_REDIRECT_URI=https://yourdomain.com/oauth/google/callback

# Groq API Configuration
GROQ_API_KEY=your-groq-api-key

# Frontend URLs (for backend CORS)
NEXT_PUBLIC_API_URL=https://workhub-backend.onrender.com
NEXT_PUBLIC_WS_URL=wss://workhub-backend.onrender.com

# Service URLs (for inter-service communication)
BACKEND_URL=https://workhub-backend.onrender.com
FRONTEND_URL=https://workhub.vercel.app

# Environment
ENVIRONMENT=production
DEBUG=false

# Performance Optimization
REDIS_CACHE_TTL=300
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30